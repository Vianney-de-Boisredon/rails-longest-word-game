
<h2>New game</h2>

<hr>

<ul class="letters">
  <% @letters.each do |l| %>
  <li><%= l %></li>
  <% end %>
</ul>


<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="letters" name="letters" type="hidden" value="<%= @letters.join %>">
  <p>What's the longest word you can find?</p>
  <input type="text" name="word" placeholder="find the longest word">
  <input type="submit" value="Play!" class="btn btn-primary" >
</form>
